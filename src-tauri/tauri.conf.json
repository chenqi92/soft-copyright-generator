{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "软著代码生成器",
  "version": "0.1.1",
  "identifier": "com.ranzhu.soft-copyright-generator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:51420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "软著代码生成器",
        "width": 1280,
        "height": 860,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false
      }
    }
  }
}